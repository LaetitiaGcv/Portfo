{% extends 'home.html.twig' %}

{% block title %}Experiences index{% endblock %}

{% block body %}
    <h1>Experiences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>School</th>
                <th>Degree</th>
                <th>Start_date</th>
                <th>End_start</th>
                <th>Logo</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for experience in experiences %}
            <tr>
                <td>{{ experience.id }}</td>
                <td>{{ experience.school }}</td>
                <td>{{ experience.degree }}</td>
                <td>{{ experience.startDate ? experience.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ experience.endStart ? experience.endStart|date('Y-m-d') : '' }}</td>
                <td>{{ experience.logo }}</td>
                <td>
                    <a href="{{ path('experiences_show', {'id': experience.id}) }}">show</a>
                    <a href="{{ path('experiences_edit', {'id': experience.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('experiences_new') }}">Create new</a>
{% endblock %}
