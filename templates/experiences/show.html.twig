{% extends 'home.html.twig' %}

{% block title %}Experiences{% endblock %}

{% block body %}
    <h1>Experiences</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ experience.id }}</td>
            </tr>
            <tr>
                <th>School</th>
                <td>{{ experience.school }}</td>
            </tr>
            <tr>
                <th>Degree</th>
                <td>{{ experience.degree }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ experience.startDate ? experience.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_start</th>
                <td>{{ experience.endStart ? experience.endStart|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td>{{ experience.logo }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('experiences_index') }}">back to list</a>

    <a href="{{ path('experiences_edit', {'id': experience.id}) }}">edit</a>

    {{ include('experiences/_delete_form.html.twig') }}
{% endblock %}
